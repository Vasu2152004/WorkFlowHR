{
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/api/auth/login",
      "destination": "/api/login"
    },
    {
      "source": "/api/auth/register",
      "destination": "/api/register"
    },
    {
      "source": "/api/health",
      "destination": "/api/health"
    },
    {
      "source": "/api/test-db",
      "destination": "/api/test-db"
    },
    {
      "source": "/api/debug-login",
      "destination": "/api/debug-login"
    },
    {
      "source": "/api/test-password",
      "destination": "/api/test-password"
    },
    {
      "source": "/api/set-password",
      "destination": "/api/set-password"
    },
    {
      "source": "/api/check-data",
      "destination": "/api/check-data"
    },
    {
      "source": "/api/check-company",
      "destination": "/api/check-company"
    },
    {
      "source": "/api/users/employees",
      "destination": "/api/employees"
    },
    {
      "source": "/api/check-schema",
      "destination": "/api/check-schema"
    },
    {
      "source": "/api/debug-isolation",
      "destination": "/api/debug-isolation"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
