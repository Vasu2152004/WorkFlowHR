{
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/api/auth/login",
      "destination": "/api/login"
    },
    {
      "source": "/api/auth/register",
      "destination": "/api/register"
    },
    {
      "source": "/api/auth/signup",
      "destination": "/api/register"
    },
    {
      "source": "/api/health",
      "destination": "/api/health"
    },
    {
      "source": "/api/users/employees",
      "destination": "/api/employees"
    },
    {
      "source": "/api/auth/add-hr-staff",
      "destination": "/api/hr-staff"
    },
    {
      "source": "/api/auth/add-hr-manager",
      "destination": "/api/hr-staff"
    },
    {
      "source": "/api/documents/templates",
      "destination": "/api/templates"
    },
    {
      "source": "/api/documents/generate",
      "destination": "/api/documents"
    },
    {
      "source": "/api/leaves",
      "destination": "/api/leave-management"
    },
    {
      "source": "/api/salary",
      "destination": "/api/salary-management"
    },
    {
      "source": "/api/debug-user",
      "destination": "/api/debug-user"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}